<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ccandroidtraining">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CCAndroidTraining">
        <activity
            android:name=".activities.SignInScreen"
            android:exported="true" />
        <activity
            android:name=".activities.ListViewExample"
            android:exported="true"
            android:label="@string/title_list_view"
            android:parentActivityName=".activities.DialogActivity" />
        <activity
            android:name=".activities.BottomNavExample"
            android:exported="true" />
        <activity
            android:name=".activities.TabActivity"
            android:exported="true"
            android:label="@string/title_activity_tab"
            android:parentActivityName=".activities.BottomNavExample"
            android:theme="@style/Theme.CCAndroidTraining.NoActionBar" />
        <activity
            android:name=".activities.BottomNavigation"
            android:exported="true"
            android:label="@string/title_activity_bottom_navigation" />
        <activity
            android:name=".activities.AuthNavigationActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:parentActivityName=".activities.BottomNavExample"
            android:theme="@style/Theme.CCAndroidTraining.NoActionBar" />
        <activity
            android:name=".activities.ForgotPassword"
            android:exported="true"
            android:parentActivityName=".activities.LoginScreen" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/LoginScreen" />
        <activity
            android:name=".activities.UIWidgets"
            android:exported="true"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.RecyclerActivity"
            android:exported="true"
            android:label="@string/title_recycler"
            android:parentActivityName=".activities.DialogActivity" />
        <activity
            android:name=".activities.DialogActivity"
            android:exported="true"
            android:label="UI Buttons"
            android:parentActivityName=".activities.UIWidgets" />
        <activity
            android:name=".activities.LoginScreen"
            android:exported="true"
            android:theme="@style/LoginScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>